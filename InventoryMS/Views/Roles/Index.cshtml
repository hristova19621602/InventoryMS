@model IEnumerable<InventoryMS.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h2>Роли</h2>

<p>
    @Html.ActionLink("Добави", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Роля")
        </th>
        <th>
            @Html.DisplayName("Статус")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            @Html.DisplayFor(modelItem => item.r_name)
        </td>
        <td>
            @{
                if (item.r_status == Convert.ToByte(1))
                { <p>Активен</p>}
                else if (item.r_status == 0)
                { <p>Неактивен</p>}
            }
            @*@Html.DisplayFor(modelItem => item.r_status)*@
        </td>
        <td>
            @Html.ActionLink("Редактирай", "Edit", new { id=item.r_id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Информация", "Details", new { id=item.r_id }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Изтриване", "Delete", new { id=item.r_id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
