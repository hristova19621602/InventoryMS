@model InventoryMS.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Склад" />
    <meta name="author" content="Таня" />
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <link href="css/styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script scr="~/Scripts/jquery.validate.js"></script>
    <script scr="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <title>Inventory</title>

</head>
<body>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="container">
        <h4><strong>Складова програма 2022</strong></h4>
        <hr />
        <h5>Вход</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row offset-md-3" style="margin-top:5%">
            <div class="form-group col-lg-7">
                @Html.LabelFor(model => model.u_username, "Потребителско име", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.u_username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row offset-md-3">
            <div class="col-lg-7">
                @Html.LabelFor(model => model.u_password, "Парола", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr/>

        <div class="row offset-md-3">
            <div class="form-group col-lg-7">
                <input type="submit" value="Влез" class="btn btn-success btn-block" />
            </div>
        </div>



        

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year Складова програма </p>
        </footer>
    </div>
    }
    </body>
</html>
